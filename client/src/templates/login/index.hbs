        {{/if}}
      </svg>
      {{text}}
    </button>
  {{/each}}
            </div>
            <div class="main__separator">
                <span class="main__line"></span>
                <span class="main__text">or</span>
                <span class="main__line"></span>
            </div>
           {{> loginForm}}

            <div class="main__privacy">
                <a href="#">Confidentialité et conditions</a>
                <a href="#">Politique en matière de cookies</a>
